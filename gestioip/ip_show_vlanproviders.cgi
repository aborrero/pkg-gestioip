use strict;
use lib './modules';
use GestioIP;

my $daten=<STDIN>;
my $gip = GestioIP -> new();
my %daten=$gip->preparer($daten);

my $base_uri = $gip->get_base_uri();
my $server_proto=$gip->get_server_proto();
my ($lang_vars,$vars_file)=$gip->get_lang();

# Parameter check
my $client_id = $daten{'client_id'} || $gip->get_first_client_id();

my $error_message=$gip->check_parameters(
        vars_file=>"$vars_file",
        client_id=>"$client_id",
) || "";

$gip->print_error_with_head(title=>"$$lang_vars{gestioip_message}",headline=>"$$lang_vars{show_vlan_providers_message}",notification=>"$error_message",vars_file=>"$vars_file",client_id=>"$client_id") if $error_message;


$gip->CheckInput("$client_id",\%daten,"$$lang_vars{mal_signo_error_message}","$$lang_vars{show_vlan_providers_message}","$vars_file");

$gip->PrintVLANproviderTab("$client_id","$vars_file");

$gip->print_end("$client_id");
